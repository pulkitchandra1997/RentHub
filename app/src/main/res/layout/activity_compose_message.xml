<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ComposeMessage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="To :"
            android:textColor="@color/cardview_dark_background"
            android:textSize="15dp"
            android:padding="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/receivermail"
            android:padding="5dp"
            android:background="@drawable/rnd"
            android:hint="Enter mail: Eg-xyz@abc.com"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="From :"
            android:textColor="@color/cardview_dark_background"
            android:textSize="15dp"
            android:padding="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/sendermail"
            android:background="@drawable/rnd"
            android:padding="5dp"
            android:hint="Enter mail: Eg-xyz@abc.com"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textColor="@color/cardview_dark_background"
            android:textSize="15dp"
            android:padding="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/msg"
            android:padding="15dp"
            android:textAlignment="viewStart"
            android:background="@drawable/rnd"
            android:hint="Enter your message"
            android:gravity="start" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_marginTop="10dp"
        android:textColor="@color/bootstrap_brand_secondary_fill"
        android:backgroundTint="@color/bootstrap_brand_primary"
        android:background="@drawable/rnd"
        android:id="@+id/send"/>

</LinearLayout>